{
  "name": "llm-security-scanner",
  "displayName": "LLM Security Scanner",
  "description": "Detect AI/LLM-specific security vulnerabilities in your code",
  "version": "1.0.0",
  "publisher": "llm-security",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Security"
  ],
  "keywords": [
    "security",
    "llm",
    "ai",
    "vulnerability",
    "scanning",
    "owasp"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LLM Security Scanner",
      "properties": {
        "llmSecurityScanner.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LLM Security Scanner"
        },
        "llmSecurityScanner.rulesDirectory": {
          "type": "string",
          "default": "",
          "description": "Path to rules directory (relative to workspace root). Defaults to llm_scan/rules/python"
        },
        "llmSecurityScanner.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter"
        },
        "llmSecurityScanner.severityFilter": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "default": ["critical", "high", "medium"],
          "description": "Severity levels to show in Problems panel"
        },
        "llmSecurityScanner.includePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["*.py"],
          "description": "File patterns to include in scans"
        },
        "llmSecurityScanner.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["**/__pycache__/**", "**/node_modules/**", "**/.venv/**", "**/venv/**"],
          "description": "File patterns to exclude from scans"
        },
        "llmSecurityScanner.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Scan files automatically on save"
        },
        "llmSecurityScanner.scanOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Scan files automatically when opened"
        },
        "llmSecurityScanner.scanDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before scanning after file changes"
        },
        "llmSecurityScanner.autoInstallDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Automatically install Python dependencies (semgrep, llm-scan) on extension activation"
        }
      }
    },
    "commands": [
      {
        "command": "llmSecurityScanner.scanWorkspace",
        "title": "Scan Workspace",
        "category": "LLM Security"
      },
      {
        "command": "llmSecurityScanner.scanFile",
        "title": "Scan Current File",
        "category": "LLM Security"
      },
      {
        "command": "llmSecurityScanner.clearResults",
        "title": "Clear Results",
        "category": "LLM Security"
      },
      {
        "command": "llmSecurityScanner.installDependencies",
        "title": "Install Dependencies",
        "category": "LLM Security"
      }
    ],
    "problemMatchers": [
      {
        "name": "llmSecurityScanner",
        "owner": "llm-security",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
